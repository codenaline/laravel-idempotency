{
    "name": "codenaline/laravel-idempotency",
    "description": "Laravel middleware and drivers for handling Idempotency Keys (Cache, Database, Redis).",
    "keywords": [
        "laravel",
        "idempotency",
        "middleware",
        "redis",
        "database",
        "cache"
    ],
    "type": "library",
    "homepage": "https://github.com/codenaline/laravel-idempotency",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Rezaei",
            "email": "mahdirezaei.dev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^8.0 || ^9.0 || ^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0 || ^3.0",
        "pestphp/pest-plugin-laravel": "^2.0 || ^3.0",
        "pestphp/pest-plugin-arch": "^2.0 || ^3.0",
        "predis/predis": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Codenaline\\LaravelIdempotency\\": "src/",
            "Codenaline\\LaravelIdempotency\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codenaline\\LaravelIdempotency\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codenaline\\LaravelIdempotency\\LaravelIdempotencyServiceProvider"
            ],
            "aliases": {
                "LaravelIdempotency": "Codenaline\\LaravelIdempotency\\Facades\\LaravelIdempotency"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
